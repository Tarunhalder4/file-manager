<resources xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <!-- Base application theme. -->
    <style name="Theme.FileManagers" parent="Theme.MaterialComponents.DayNight.NoActionBar">
<!--        theme attach for bottom Sheet-->
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/folder_background_dark</item>
        <item name="colorPrimaryVariant">@color/folder_background_dark</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/folder_background_dark</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@color/folder_background_dark</item>
        <item name="android:navigationBarColor">@color/folder_background_dark</item>
        <!-- Customize your theme here. -->
    </style>

<!--    toolbar popUp theme-->
    <style name="MyToolbarStyle" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:backgroundTint">@color/gray1</item>
        <item name="android:textColor">@color/white</item>
    </style>

<!--    card view theme-->
    <style name="card_theme">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:backgroundTint">@color/gray</item>
        <item name="cardCornerRadius">4dp</item>
    </style>

<!--    card view theme-->
    <style name="child_card_theme">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:backgroundTint">@color/gray1</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="cardCornerRadius">4dp</item>
    </style>


<!--    bottom bar theme-->
    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

<!--    bottom bar helper theme-->
    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_card_back_ground</item>
    </style>

</resources>